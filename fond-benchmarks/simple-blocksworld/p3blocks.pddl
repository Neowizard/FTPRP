(define (problem simple_blocks_problem)
  (:domain blocks-domain)
  (:objects b1 t1 b2 t2 b3 t3 - block_t)
  (:init (emptyhand) (on b1 t1) (clear b1) (on b2 t2) (clear b2) (on b3 t3) (clear b3))
  (:goal (and (on b1 b2) (on b2 b3) (on b3 t2) (not (broken b1)) (not (broken b2)) (not (broken b3))))
)
